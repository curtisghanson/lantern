{% extends '::base.html.twig' %}

{% set pageIcon = 'group' %}
{% set pageTitle = 'admin.panel'|trans %}
{% set pageSubtitle = 'groups'|trans %}
{% set active = 'LanternAuthBundle_group_index' %}

{% block navBody %}
    {% include 'LanternAdminBundle::nav.html.twig' %}
{% endblock navBody %}

{% block contentBody -%}
    <table class="table table-bordered table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th><input type="checkbox" class="select-all" /></th>
                <th>{{ 'actions'|trans }}</th>
                <th>{{ 'short.name'|trans }}</th>
                <th>{{ 'long.name'|trans }}</th>
                <th>{{ 'description'|trans }}</th>
                <th>{{ 'status'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><input type="checkbox" /></td>
                <td>
                    <div class="btn-group" role="group" aria-label="{{ 'group.actions'|trans }}">
                        <a href="{{ path('LanternAuthBundle_group_view', { 'id': entity.id }) }}" class="btn btn-xs btn-default" title="{{ 'view'|trans }}">
                            <span class="fa fa-search-plus"></span>
                        </a>
                        <a href="{{ path('LanternAuthBundle_group_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-default" title="{{ 'edit'|trans }}">
                            <span class="fa fa-pencil"></span>
                        </a>
                    </div>
                </td>
                <td>{{ entity.shortName }}</td>
                <td>{{ entity.longName }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    {% if entity.isActive %}
                        <span class="label label-success">{{ 'active'|trans }}</span>
                    {% else %}
                        <span class="label label-danger">{{ 'inactive'|trans }}</span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('LanternAuthBundle_group_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock contentBody %}

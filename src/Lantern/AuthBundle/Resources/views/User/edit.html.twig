{% extends '::base.html.twig' %}

{% set pageIcon = 'user' %}
{% set pageTitle = 'admin.panel'|trans %}
{% set pageSubtitle = 'edit.user'|trans %}
{% set activeItem = 'LanternAuthBundle_user_index' %}

{% block navBody %}
    {% include 'LanternAdminBundle::nav.html.twig' %}
{% endblock navBody %}

{% block contentBody %}
    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
        {{ form_errors(edit_form) }}
        <div class="form-group">
            {{ form_label(
                edit_form.username,
                'username'|trans,
                {'label_attr': {'class': 'col-sm-2 control-label'}}
            ) }}
            <div class="col-sm-10">
                {{ form_widget(
                    edit_form.username,
                    {'attr': {'class': 'form-control', 'placeholder': 'username'|trans}}
                ) }}
                {% if form_errors(edit_form.username) %}
                    <span id="helpBlock" class="help-block">
                        {{ form_errors(edit_form.username) }}
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(
                edit_form.firstName,
                'first.name'|trans,
                {'label_attr': {'class': 'col-sm-2 control-label'}}
            ) }}
            <div class="col-sm-10">
                {{ form_widget(
                    edit_form.firstName,
                    {'attr': {'class': 'form-control', 'placeholder': 'first.name'|trans}}
                ) }}
                {% if form_errors(edit_form.username) %}
                    <span id="helpBlock" class="help-block">
                        {{ form_errors(edit_form.firstName) }}
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(
                edit_form.lastName,
                'last.name'|trans,
                {'label_attr': {'class': 'col-sm-2 control-label'}}
            ) }}
            <div class="col-sm-10">
                {{ form_widget(
                    edit_form.lastName,
                    {'attr': {'class': 'form-control', 'placeholder': 'last.name'|trans}}
                ) }}
                {% if form_errors(edit_form.username) %}
                    <span id="helpBlock" class="help-block">
                        {{ form_errors(edit_form.lastName) }}
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(
                edit_form.nickname,
                'nickname'|trans,
                {'label_attr': {'class': 'col-sm-2 control-label'}}
            ) }}
            <div class="col-sm-10">
                {{ form_widget(
                    edit_form.nickname,
                    {'attr': {'class': 'form-control', 'placeholder': 'nickname'|trans}}
                ) }}
                {% if form_errors(edit_form.username) %}
                    <span id="helpBlock" class="help-block">
                        {{ form_errors(edit_form.nickname) }}
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(
                edit_form.email,
                'email'|trans,
                {'label_attr': {'class': 'col-sm-2 control-label'}}
            ) }}
            <div class="col-sm-10">
                {{ form_widget(
                    edit_form.email,
                    {'attr': {'class': 'form-control', 'placeholder': 'email'|trans}}
                ) }}
                {% if form_errors(edit_form.username) %}
                    <span id="helpBlock" class="help-block">
                        {{ form_errors(edit_form.email) }}
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(
                edit_form.password.first,
                'password'|trans,
                {'label_attr': {'class': 'col-sm-2 control-label'}}
            ) }}
            <div class="col-sm-10">
                {{ form_widget(
                    edit_form.password.first,
                    {'attr': {'class': 'form-control', 'placeholder': 'password'|trans}}
                ) }}
                {% if form_errors(edit_form.username) %}
                    <span id="helpBlock" class="help-block">
                        {{ form_errors(edit_form.password.first) }}
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(
                edit_form.password.second,
                'confirm.password'|trans,
                {'label_attr': {'class': 'col-sm-2 control-label'}}
            ) }}
            <div class="col-sm-10">
                {{ form_widget(
                    edit_form.password.second,
                    {'attr': {'class': 'form-control', 'placeholder': 'confirm.password'|trans}}
                ) }}
                {% if form_errors(edit_form.username) %}
                    <span id="helpBlock" class="help-block">
                        {{ form_errors(edit_form.password.second) }}
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(
                edit_form.groups,
                'groups'|trans,
                {'label_attr': {'class': 'col-sm-2 control-label'}}
            ) }}
            <div class="col-sm-4">
                {{ form_widget(
                    edit_form.groups,
                    {'attr': {'class': 'form-control'}}
                ) }}
                {% if form_errors(edit_form.groups) %}
                    <span id="helpBlock" class="help-block">
                        {{ form_errors(edit_form.groups) }}
                    </span>
                {% endif %}
            </div>
            {{ form_label(
                edit_form.userRoles,
                'roles'|trans,
                {'label_attr': {'class': 'col-sm-2 control-label'}}
            ) }}
            <div class="col-sm-4">
                {{ form_widget(
                    edit_form.userRoles,
                    {'attr': {'class': 'form-control'}}
                ) }}
                {% if form_errors(edit_form.userRoles) %}
                    <span id="helpBlock" class="help-block">
                        {{ form_errors(edit_form.userRoles) }}
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
                <div class="checkbox">
                    {#{{ form_label(edit_form.isLocked, 'is.locked'|trans) }}#}
                    <label>
                        {{ form_widget(
                            edit_form.isLocked,
                            {'attr': {'class': ''}}
                        ) }}
                        {{ 'is.locked'|trans }}
                    </label>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="checkbox">
                    {#{{ form_label(edit_form.isLocked, 'is.locked'|trans) }}#}
                    <label>
                        {{ form_widget(
                            edit_form.isActive,
                            {'attr': {'class': ''}}
                        ) }}
                        {{ 'is.active'|trans }}
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
                {{ form_widget(edit_form.submit, {
                    'label': 'update'|trans,
                    'attr': {'class': 'btn btn-default form-control'}
                }) }}
            </div>
            <div class="col-sm-2">
                <a href="{{ path('LanternAuthBundle_user_index') }}" class="btn btn-link">{{ 'user.list'|trans }}</a>
            </div>
        </div>
        {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}

    <ul class="record_actions">
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock contentBody %}

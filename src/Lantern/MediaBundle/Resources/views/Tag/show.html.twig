{% extends '::base.html.twig' %}

{% set pageIcon = 'tags' %}
{% set pageTitle = 'admin.panel'|trans %}
{% set pageSubtitle = 'tags'|trans %}
{% set active = 'LanternMediaBundle_tag_index' %}

{% block navBody %}
    {% include 'LanternAdminBundle::nav.html.twig' %}
{% endblock navBody %}

{% block contentBody %}
    <h1>Tag</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Shortname</th>
                <td>{{ entity.shortName }}</td>
            </tr>
            <tr>
                <th>Longname</th>
                <td>{{ entity.longName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ entity.locale }}</td>
            </tr>
            <tr>
                <th>Displaytype</th>
                <td>{{ entity.displayType }}</td>
            </tr>
            <tr>
                <th>Display</th>
                <td>{{ entity.display }}</td>
            </tr>
            <tr>
                <th>Iseditable</th>
                <td>{{ entity.isEditable }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('LanternMediaBundle_tag_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('LanternMediaBundle_tag_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock contentBody %}

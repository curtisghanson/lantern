{% extends '::base.html.twig' %}

{% set pageIcon = 'tags' %}
{% set pageTitle = 'admin.panel'|trans %}
{% set pageSubtitle = 'tags'|trans %}
{% set active = 'LanternMediaBundle_tag_index' %}

{% block navBody %}
    {% include 'LanternAdminBundle::nav.html.twig' %}
{% endblock navBody %}

{% block contentBody %}
    <h1>Tag list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Shortname</th>
                <th>Longname</th>
                <th>Description</th>
                <th>Locale</th>
                <th>Displaytype</th>
                <th>Display</th>
                <th>Iseditable</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('LanternMediaBundle_tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.shortName }}</td>
                <td>{{ entity.longName }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.locale }}</td>
                <td>{{ entity.displayType }}</td>
                <td>{{ entity.display }}</td>
                <td>{{ entity.isEditable }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('LanternMediaBundle_tag_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('LanternMediaBundle_tag_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('LanternMediaBundle_tag_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock contentBody %}
